<link rel="stylesheet" href="~/css/style.css">
<div class="text-center">
    @model loginGuest
    <h2 class="display-5">Login to WeddingPlanner!</h2>
    <form class="loggy" method="post" asp-action="Login" controller="Home">
        <span class="error" asp-validation-for="logEmail"></span>
        <label for="logEmail">Email</label>
        <input type="email" name="logEmail" class="form-control">
        <span class="error" asp-validation-for="logPassword"></span>
        <label for="logPassword">Password</label>
        <input type="password" name="logPassword" class="form-control"><hr><br>
        <button class="btn btn-primary">Log in!</button>
    </form>
</div>